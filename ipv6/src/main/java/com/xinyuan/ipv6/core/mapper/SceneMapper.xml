<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xinyuan.ipv6.core.mapper.SceneMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.xinyuan.ipv6.core.model.Scene">
		<id column="ID" property="id" />
		<result column="ACTIVE" property="active" />
		<result column="NAME" property="name" />
		<result column="CLASSROOM_NUM" property="classroomNum" />
	</resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        ID AS id, ACTIVE AS active, NAME AS name, CLASSROOM_NUM AS classroomNum
    </sql>

</mapper>
